<%# LEFT SIDEBAR %>
<%= render 'layouts/showsidebar', user: @user %>
        
<%# RIGHT MAINCONTENTS %>
        <div class="col-xs-9">
            <h2>Book detail</h2>
            <table class="table">
                <tbody>
                
                        <tr>
                            <td>
                                <%= link_to user_path(@book.user_id) do %>
                                    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "pull-left profile-thumb", fallback: "no_image-icon.jpg" %>
                                    <br><br>
                                    <%= @user.name %>
                                <% end %>
                            </td>
                            <td>
                                <%= link_to book_path(@book.id) do %>
                                    <%= @book.title %>
                                <% end %>
                            </td>
                            <td><%= @book.body %></td>
                            <td>
                                <% if @book.liked_by?(current_user) %>
                                    <%= link_to book_likes_path(@book), method: :delete do %>
                                    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
                                    <%= @book.likes.count %>いいね
                                    <% end %>
                                <% else %>
                                    <%= link_to book_likes_path(@book), method: :post do %>
                                    <i class="far fa-heart" aria-hidden="true"></i>
                                    <%= @book.likes.count %>いいね
                                    <% end %>
                                <% end %>
                            </td>
                            <td>コメント数：<%= @book.book_comments.count %></td>
                            <% if @user == current_user %>
                                <td><%= link_to 'Edit', edit_book_path(@book.id), class:"btn-sm btn-success" %><td>
                                <td><%= link_to 'Destroy', book_path(@book.id), method:'delete', data: { confirm:"本当に消しますか？"}, class:"btn-sm btn-danger" %></td>
                            <% end %>
                        </tr>
                </tbody>
            </table>

            <table class="table">
                <% @book.book_comments.each do |book| %>
                <tr>
                    <td>
                        <%= attachment_image_tag book.user , :profile_image, :fill, 60, 60, class: "pull-left profile-thumb", fallback: "no_image-icon.jpg" %>
                        <%= book.user.name %>
                    </td>
                    <td><%= book.comment %></td>
                    <td>
                        <% if book.user == current_user %>
                            <%= link_to "削除", book_book_comment_path(book.book_id, book.id), method: :delete, class:"btn btn-sm btn-danger" %>
                        <% end %>
                    </td>
                </tr>
                <% end %>
            </table>
            
            <div class="row">
                <%= form_for [@book, @book_comment] do |f| %>
                <%= f.text_area :comment, style:"width: 90%; height: 100px;" %>
                <%= f.submit "送信" %>
                <% end %>
            </div>

        </div>
    </div>
</div>